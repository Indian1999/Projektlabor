@startuml Architecture Diagram
!theme plain
skinparam backgroundColor #FEFEFE
skinparam classBackgroundColor #E8F4F8
skinparam classBorderColor #333333
skinparam arrowColor #333333
skinparam fontSize 12

' ==================== User Interfaces Layer ====================
package "Felhasználói Interfészek" #E3F2FD {
    component "Unity.py\n(Tkinter)" as Unity
}

' ==================== Application Logic Layer ====================
package "Alkalmazás Logika" #F3E5F5 {
    component "ServerApplication" as ServerApp
    component "server.py\n(FastAPI)" as FastAPI
}

' ==================== Algorithms & Solvers Layer ====================
package "Algoritmusok & Megoldók" #FFF3E0 {
    component "Genetic" as Genetic
    component "Constructive" as Constructive
    component "CubeSolver" as CubeSolver
}

' ==================== Data Models Layer ====================
package "Adatmodellek" #E8F5E9 {
    component "Space\n(tér)" as Space
    component "Cube\n(kocka)" as Cube
    component "Process" as Process
}

' ==================== Connections ====================
Unity --> ServerApp : használ

ServerApp --> FastAPI : tartalmaz
ServerApp --> Process : kezel\n(0..*)

Genetic --> Space : használ\n(0..*)
Constructive --> Space : használ\n(0..*)
CubeSolver --> Space : tárol

Space --> Cube : tartalmaz\n(0..*)
Space --> Process : kapcsolódik

Process --> Genetic : futtat
Process --> Constructive : futtat

@enduml
